<h1>Create new Post</h1>

<!-- Form Tag -->
<%#= form_tag "" do %>
<%= form_for @post, class: "form-horizontal" do |f| %>
	<div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">

      <%= f.text_field :title, class: "form-control" %>

      <!-- For Form Tag -->
      <%#= text_field_tag :title, nil %>
    </div>
  </div>
  <br /><br /><br />
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>

      <%#= text_area_tag :desccription, nil %>
    </div>
  </div>
  <br /><br /><br />
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Published at</label>
    <div class="col-sm-10">
      <%= f.date_field :published_at, class: "form-control" %>
    </div>
  </div>
  <br /><br /><br />
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Publish", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>	